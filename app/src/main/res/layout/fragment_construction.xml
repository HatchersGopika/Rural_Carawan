<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hatchers.ruralcaravane.construction_team.ConstructionFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/construction_toolbar"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_below="@id/construction_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/add_construction_member"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:text="@string/add_new_construction_team_member_marathi"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/DarkGrey"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/desc_txt"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="@string/construction_team_member_marathi"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp" />


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/construction_recycler"
            android:scrollbars="horizontal"
            android:layout_below="@+id/desc_txt"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</RelativeLayout>
